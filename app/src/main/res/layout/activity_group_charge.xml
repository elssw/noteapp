<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 返回按鈕 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="返回" />

        <!-- 圖片預覽 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="圖片記錄"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="點擊以拍照或上傳圖片"
            android:clickable="true"
            android:focusable="true" />

        <!-- 金額輸入 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="輸入總金額"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="例如：450"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="12dp"
            android:textSize="18sp"
            android:layout_marginTop="4dp" />

        <!-- 備註 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="備註內容"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="例如：聚餐費用"
            android:inputType="text"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="12dp"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- 付款人選擇 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選擇付款人與金額"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <!-- 複選付款人 TextView -->
        <TextView
            android:id="@+id/tvSelectPayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="請選擇付款人"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:layout_marginTop="8dp" />

        <!-- 成員付款金額輸入欄 -->
        <LinearLayout
            android:id="@+id/payerAmountContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <!-- 分帳對象 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選擇要分攤的人"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/memberSelectionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/flexbox_bg"
            app:flexWrap="wrap"
            app:justifyContent="flex_start" />

        <!-- 確認按鈕 -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="確認分帳"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
