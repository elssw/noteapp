<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Charge">

    <!-- 左上角的返回鍵 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="返回"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toTopOf="@+id/items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 原本的 locate EditText，改 Start 約束指向 btnBack -->
    <EditText
        android:id="@+id/locate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:hint="連結位置"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- RecyclerView 必须在 locate 下面、note 之上-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locate" />

    <TextView
        android:id="@+id/note"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="添加備註"
        android:textColor="#FFFFFF"
        android:background="#444444"
        app:layout_constraintBottom_toTopOf="@+id/tvAmountDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAmountDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NT$0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footerContainer"/>

    <!-- 底部淺灰背景容器，包含鍵盤 -->
    <LinearLayout
        android:id="@+id/footerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 第一行: 1,2,3,÷,AC -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="1"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_2"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="2"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_3"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="3"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="÷"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="AC"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <!-- 第二行: 4,5,6,*,← -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_4"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="4"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_5"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="5"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_6"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="6"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="*"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="←"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <!-- 第三行: 7,8,9,+,圖 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_7"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="7"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_8"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="8"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_9"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="9"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="+"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/image"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="圖"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <!-- 第四行: .,0,=,-,OK -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/point"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="."
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_0"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="0"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equal"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="="
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/subtract"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="-"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:text="OK"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                app:cornerRadius="5dp" />
        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
