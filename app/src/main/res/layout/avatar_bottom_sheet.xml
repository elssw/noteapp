<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_take_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_camera_svg"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="開啟相機拍攝"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pick_gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_photo_library_svg"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="開啟相簿選取"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_take_camera"
        app:layout_constraintStart_toStartOf="@+id/tv_take_camera"
        app:layout_constraintTop_toBottomOf="@+id/tv_take_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>
